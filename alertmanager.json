{
  "id": "/prometheus/alertmanager",
  "instances": 1,
  "cpus": 0.5,
  "mem": 2048,
  "ports": [0],
  "env": {
    "EXTERNAL_URI": "https://alerting.example.com/",
    "PAGERDUTY_HIGH_PRIORITY_KEY": "d230f2398hf293h2304f304j343f0j34",
    "PAGERDUTY_LOW_PRIORITY_KEY": "d2302n3f4f4h39230f239f03g30jf24f",
    "SMTP_FROM": "noreply@example.com",
    "SMTP_TO": "ops@example.com",
    "SMTP_SMARTHOST": "smtp.example.com",
    "SMTP_LOGIN": "someuser",
    "SMTP_PASSWORD": "somepassword"
  },
  "container": {
    "type": "DOCKER",
    "volumes": [
      {
        "containerPath": "prometheus",
        "persistent": {
          "size": 1024
        },
        "mode": "RW"
      }
    ],
    "docker": {
      "image": "salekseev/prometheus-dcos",
      "forcePullImage": true,
      "network": "BRIDGE",
      "args": [
        "/startup-alertmanager"
      ],
      "portMappings": [
        {
            "containerPort": 9093,
            "protocol": "tcp",
            "labels": {
              "VIP_0": "/prometheus/alertmanager:9093"
            }
        }
      ]
    }
  },
  "residency": {
    "taskLostBehavior": "WAIT_FOREVER"
  },
  "healthChecks": [
    {
      "path": "/api/v1/status",
      "portIndex": 0,
      "protocol": "HTTP"
    }
  ]
}
